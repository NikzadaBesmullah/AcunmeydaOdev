@model IEnumerable<OgrenciKayit.Models.Ogreciler>

<h2>Öğrenci Listesi</h2>

<table border="1" cellpadding="5" cellspacing="0" style="width: 100%; border-collapse: collapse;">
    <thead style="background-color: #4CAF50; color: white;">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>E-posta</th>
            <th>Öğrenci Numarası</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.FirstName</td>
                <td>@ogrenci.LastName</td>
                <td>@ogrenci.Email</td>
                <td>@ogrenci.StudentNumber</td>
                <td>
                    <a href="@Url.Action("Guncelle", "Ogrenciler", new { id = ogrenci.Id })" style="color: #4CAF50;">Güncelle</a> |
                    <a href="@Url.Action("Sil", "Ogrenciler", new { id = ogrenci.Id })" style="color: red;"
                       onclick="return confirm('Bu öğrenciyi silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
